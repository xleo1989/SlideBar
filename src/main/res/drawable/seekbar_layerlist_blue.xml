<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background"
          android:bottom="4dp" android:top="4dp"
          android:drawable="@drawable/seekbar_background"/>
    <item android:id="@android:id/secondaryProgress"  android:bottom="4dp" android:top="4dp">
        <scale android:scaleWidth="100%">
            <selector>
                <item android:state_enabled="false">
                    <color android:color="@android:color/transparent"/>
                </item>
                <item android:drawable="@drawable/seekbar_foreground_blue"/>
            </selector>
        </scale>
    </item>
    <item android:id="@android:id/progress"  android:bottom="4dp" android:top="4dp">
        <scale android:scaleWidth="100%">
            <selector>
                <item android:state_enabled="false">
                    <color android:color="@android:color/transparent"/>
                </item>
                <item android:drawable="@drawable/seekbar_foreground_blue"/>
            </selector>
        </scale>
    </item>
</layer-list>